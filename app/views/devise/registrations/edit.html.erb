<div class="w-full max-w-lg mx-auto">
  <h2 class="text-2xl font-semibold tracking-tight text-gray-900 text-center">
    Edit <%= resource_name.to_s.humanize %>
  </h2>
  <p class="mt-1 text-center text-sm text-gray-500">
    Update your account details below
  </p>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-6 rounded-xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>

      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name, autocomplete: "given-name",
                           placeholder: "John",
                           class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                        ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                        focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name, autocomplete: "family-name",
                           placeholder: "Doe",
                           class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                        ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                        focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
        </div>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="text-sm text-gray-600">
          Currently waiting confirmation for:
          <span class="font-medium text-gray-900"><%= resource.unconfirmed_email %></span>
        </p>
      <% end %>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <p class="text-xs text-gray-500">Leave blank if you donâ€™t want to change it</p>
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
        <p class="text-xs text-gray-500">We need your current password to confirm changes</p>
        <%= f.password_field :current_password, autocomplete: "current-password",
                             class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <%= f.submit "Update",
                   class: "w-full rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow
                   hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
    <% end %>
  </div>

  <div class="mt-8 rounded-xl border border-red-200 bg-red-50 p-4 text-center">
    <h3 class="text-sm font-semibold text-red-700">Cancel my account</h3>
    <p class="mt-1 text-sm text-red-600">Unhappy? This action is permanent.</p>
    <div class="mt-3">
      <%= button_to "Cancel my account",
                    registration_path(resource_name),
                    method: :delete,
                    data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                    class: "w-full rounded-xl bg-red-600 px-4 py-2.5 text-sm font-semibold text-white shadow
                    hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2" %>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Back", root_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
