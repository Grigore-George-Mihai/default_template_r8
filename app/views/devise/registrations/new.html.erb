<div class="w-full max-w-md">
  <h1 class="text-2xl font-semibold tracking-tight text-center text-gray-900">Sign up</h1>
  <p class="mt-1 text-center text-sm text-gray-500">Create your account to get started</p>

  <div class="mt-4">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="mt-6 rounded-xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>

      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name",
                           placeholder: "John",
                           class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                        ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                        focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name, autocomplete: "family-name",
                           placeholder: "Doe",
                           class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                        ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                        focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
        </div>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email",
                          placeholder: "you@example.com",
                          class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
                             placeholder: "••••••••",
                             class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             placeholder: "••••••••",
                             class: "mt-1 block w-full rounded-xl border-0 bg-white px-3 py-2.5 text-gray-900
                      ring-1 ring-inset ring-gray-300 placeholder:text-gray-400
                      focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      </div>

      <%= f.submit "Sign up",
                   class: "w-full rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow
                   hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
    <% end %>
  </div>

  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
