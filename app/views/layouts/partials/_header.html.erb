<header class="bg-white border-b">
  <nav class="container mx-auto max-w-7xl w-full px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Brand -->
      <div>
        <%= link_to "MyApp", root_path, class: "text-lg font-semibold tracking-tight hover:text-gray-700" %>
      </div>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-6">
        <%= link_to "Home", root_path, class: "text-sm font-medium hover:text-indigo-600 transition" %>

        <% if user_signed_in? %>
          <!-- Desktop dropdown (no JS) -->
          <details class="relative">
            <summary class="list-none cursor-pointer select-none inline-flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium hover:bg-gray-100">
              Options
              <i class="fa-solid fa-chevron-down text-gray-500 text-xs" aria-hidden="true"></i>
            </summary>
            <div class="absolute right-0 mt-2 w-48 rounded-xl bg-white shadow-lg ring-1 ring-black/5 overflow-hidden z-20">
              <ul class="py-1 text-sm">
                <% if current_user.admin? %>
                  <li>
                    <%= link_to "Admin", root_path, class: "block px-4 py-2 hover:bg-gray-50" %>
                  </li>
                <% end %>
                <li>
                  <%= link_to "Profile", edit_user_registration_path, class: "block px-4 py-2 hover:bg-gray-50" %>
                </li>
                <li>
                  <%= link_to "Logout", destroy_user_session_path, class: "block px-4 py-2 hover:bg-gray-50", data: { turbo_method: :delete } %>
                </li>
              </ul>
            </div>
          </details>
        <% end %>
      </div>

      <!-- Mobile menu toggle -->
      <details class="md:hidden">
        <summary class="list-none inline-flex items-center justify-center p-2 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500">
          <span class="sr-only">Open main menu</span>
          <i class="fa-solid fa-bars text-gray-700 text-xl" aria-hidden="true"></i>
        </summary>

        <!-- Mobile menu panel -->
        <div class="mt-2 bg-white border rounded-xl shadow-sm overflow-hidden">
          <nav class="px-2 py-3">
            <%= link_to "Home", root_path,
                        class: "block rounded-md px-3 py-2 text-base font-medium hover:bg-gray-100" %>
          </nav>

          <% if user_signed_in? %>
            <div class="border-t px-2 py-3">
              <p class="px-1 pb-2 text-xs font-semibold text-gray-500 uppercase tracking-wide">Options</p>
              <nav class="space-y-1">
                <% if current_user.admin? %>
                  <%= link_to "Admin", root_path, class: "block rounded-md px-3 py-2 hover:bg-gray-100" %>
                <% end %>
                <%= link_to "Profile", edit_user_registration_path, class: "block rounded-md px-3 py-2 hover:bg-gray-100" %>
                <%= link_to "Logout", destroy_user_session_path, class: "block rounded-md px-3 py-2 hover:bg-gray-100", data: { turbo_method: :delete } %>
              </nav>
            </div>
          <% end %>
        </div>
      </details>
    </div>
  </nav>
</header>
